  "main": "src/server.ts",
  "scripts": {
    "local": "NODE_ENV=local nodemon --watch src --ext ts,js,json --exec ts-node src/server.ts",
    "development": "NODE_ENV=development nodemon --watch src --ext ts,js,json --exec ts-node src/server.ts",
    "staging": "NODE_ENV=staging node dist/server.js",
