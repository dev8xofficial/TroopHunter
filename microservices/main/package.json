    "migrate:staging": "NODE_ENV=staging npx sequelize-cli db:migrate",
    "migrate:production": "NODE_ENV=production npx sequelize-cli db:migrate",
    "migrate:undo:local": "NODE_ENV=local npx sequelize-cli db:migrate:undo",
    "migrate:undo:development": "NODE_ENV=development npx sequelize-cli db:migrate:undo",
    "migrate:undo:staging": "NODE_ENV=staging npx sequelize-cli db:migrate:undo",
    "migrate:undo:production": "NODE_ENV=production npx sequelize-cli db:migrate:undo",
    "seed:local": "NODE_ENV=local npx sequelize-cli db:seed:all",
    "seed:development": "NODE_ENV=development npx sequelize-cli db:seed:all",
    "seed:staging": "NODE_ENV=staging npx sequelize-cli db:seed:all",
    "seed:production": "NODE_ENV=production npx sequelize-cli db:seed:all"
