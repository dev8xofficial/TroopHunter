{
  "name": "@repo/utils",
  "version": "1.0.0",
  "private": true,
  "description": "This repository is a shared resource among microservices.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "local": {
        "types": "./src/index.ts",
        "import": "./src/index.ts",
        "require": "./src/index.ts"
      }
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "node build.config.js && tsc",
    "clean": "rm -rf dist",
    "dev": "tsc -w",
    "lint": "eslint \"src/**/*.ts*\" --max-warnings 0",
    "test": "jest",
    "prebuild": "npm run clean",
    "postbuild": "npm run type-check",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-libphonenumber": "^3.2.32",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.15",
    "pg-hstore": "^2.3.4",
    "pg-pool": "^3.6.0",
    "pg-promise": "^11.5.0",
    "sequelize": "^6.33.0",
    "@repo/eslint-config": "*",
    "@repo/tsconfig-backend": "*",
    "@repo/validator": "*",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/google-libphonenumber": "^7.4.23",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.5",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.10.1",
    "@types/sequelize": "^4.28.15",
    "jest": "^29.5.0",
    "pg": "^8.11.0",
    "sequelize-cli": "^6.6.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
