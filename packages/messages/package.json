{
  "name": "@repo/messages",
  "version": "1.0.0",
  "private": true,
  "description": "This repository is a shared resource among microservices.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "local": {
        "types": "./src/index.ts",
        "import": "./src/index.ts",
        "require": "./src/index.ts"
      }
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "node build.config.js && tsc",
    "clean": "rimraf dist",
    "dev": "tsc -w",
    "lint": "eslint \"src/**/*.ts*\" --max-warnings 0",
    "test": "jest",
    "prebuild": "npm run clean",
    "postbuild": "npm run type-check",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/tsconfig-backend": "*",
    "@repo/eslint-config": "*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
