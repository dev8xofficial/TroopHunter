{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Scraper",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scraper/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/scraper/venv/bin/python"
    },
    {
      "name": "Google API",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scraper/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/scraper/venv/bin/python"
    },
    {
      "name": "Backend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/node_modules/ts-node/dist/bin.js",
      "runtimeArgs": [
        "--inspect"
      ],
      "args": ["${workspaceFolder}/backend/src/server.ts"],
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/backend/.env",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Auth",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/services/auth/node_modules/ts-node/dist/bin.js",
      "runtimeArgs": [
        "--inspect"
      ],
      "args": ["${workspaceFolder}/services/auth/src/server.ts"],
      "env": {
        "NODE_ENV": "development"
      },
      "envFile": "${workspaceFolder}/services/auth/.env",
      "cwd": "${workspaceFolder}/services/auth",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "TroopHunter",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/crm/node_modules/vite/bin/vite.js",
      "cwd": "${workspaceFolder}/crm",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
