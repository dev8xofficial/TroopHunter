{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "backend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/node_modules/ts-node/dist/bin.js", // Update with the path to your main server file
      "runtimeArgs": [
        "--inspect" // Add any additional runtime arguments if required
      ],
      "args": ["${workspaceFolder}/backend/src/server.ts"],
      "env": {
        "NODE_ENV": "development" // Set environment variables if needed
      },
      "envFile": "${workspaceFolder}/backend/.env", // Path to your environment file
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "auth",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/services/auth/node_modules/ts-node/dist/bin.js", // Update with the path to your main server file
      "runtimeArgs": [
        "--inspect" // Add any additional runtime arguments if required
      ],
      "args": ["${workspaceFolder}/services/auth/src/server.ts"],
      "env": {
        "NODE_ENV": "development" // Set environment variables if needed
      },
      "envFile": "${workspaceFolder}/services/auth/.env", // Path to your environment file
      "cwd": "${workspaceFolder}/services/auth",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Scraper",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scraper/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/scraper/venv/bin/python" // Update with the path to your venv Python executable
    },
    {
      "name": "Node.js Current File",
      "program": "${workspaceFolder}/node/cities.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "FindPlace",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scraper/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/scraper/venv/bin/python" // Update with the path to your venv Python executable
    },
    {
      "name": "Node.js Current File",
      "program": "${workspaceFolder}/node/cities.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "TroopHunter",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/crm/node_modules/vite/bin/vite.js",
      "cwd": "${workspaceFolder}/crm",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
