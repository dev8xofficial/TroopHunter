    {
      "name": "MicroMain",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "runtimeArgs": ["--inspect"],
      "runtimeExecutable": "node",
      "args": ["${workspaceFolder}/microservices/main/src/server.ts"],
      "env": {
        "NODE_ENV": "local"
      },
      "envFile": "${workspaceFolder}/microservices/main/.env",
      "cwd": "${workspaceFolder}/microservices/main",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"]
